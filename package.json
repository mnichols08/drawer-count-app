{
  "name": "drawer-count-app",
  "version": "0.3.4",
  "description": "A minimal, installable PWA to help myself and coworkers count drawers at the end of the day.",
  "main": "src/index.html",
  "scripts": {
    "test": "node tests/run-tests.js",
    "test:setup": "node --test tests/setup.test.js",
    "test:basic": "node --test tests/scripts/basic-tests.test.js",
    "test:build": "node --test tests/scripts/build.test.js",
    "test:bump": "node --test tests/scripts/bump-sw-cache.test.js",
    "test:icons": "node --test tests/scripts/generate-icons.test.js",
    "test:images": "node --test tests/scripts/optimize-images.test.js",
    "test:server": "node --test tests/scripts/server.test.js",
    "test:scripts": "node --test tests/scripts/package-scripts.test.js",
    "test:watch": "node --test --watch tests/",
    "test:coverage": "node --test --experimental-test-coverage tests/",
    "dev": "nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "start:dev": "node server.js",
    "build": "node ./scripts/build.js",
    "build:prod": "npm run optimize-images && npm run build",
    "icons": "node ./scripts/generate-icons.js",
    "bump-sw": "node ./scripts/bump-sw-cache.js",
    "bump-sw:push": "node ./scripts/bump-sw-cache.js --push",
    "release:patch": "node ./scripts/bump-sw-cache.js --patch --push",
    "release:minor": "node ./scripts/bump-sw-cache.js --minor --push",
    "release:major": "node ./scripts/bump-sw-cache.js --major --push",
    "release:patch:push": "node ./scripts/bump-sw-cache.js --patch --push",
    "release:tag-only": "node ./scripts/bump-sw-cache.js --no-commit",
    "release:tag-only:push": "node ./scripts/bump-sw-cache.js --no-commit --push",
    "optimize-images": "node ./scripts/optimize-images.js",
    "predeploy": "npm run build:prod",
    "deploy": "echo \"Deploy the /dist folder to your hosting provider\"",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('./dist')) fs.rmSync('./dist', {recursive:true, force:true}); console.log('Cleaned dist/ folder');\"",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint . --ext .js || exit 0",
    "lint:md": "markdownlint **/*.md --ignore node_modules --ignore dist || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnichols08/drawer-count-app.git"
  },
  "keywords": [
    "pwa",
    "drawer-count",
    "calculator"
  ],
  "author": "Mikey Nichols",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mnichols08/drawer-count-app/issues"
  },
  "homepage": "https://github.com/mnichols08/drawer-count-app#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongodb": "^6.9.0",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "favicons": "^7.2.0",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "sharp": "^0.33.5"
  }
}
